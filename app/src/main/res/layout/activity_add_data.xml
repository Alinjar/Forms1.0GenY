<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddDataActivity">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_name"
        android:inputType="text"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/classEdit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEditText"
        android:hint="Class"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/dateEdit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classEdit"
        android:hint="Date Of Birth"
        android:inputType="date"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/genderEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateEdit"
        android:text="Gender"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/genderEdit"
        android:layout_marginTop="65dp"

        android:hint="Email"
        android:textSize="40sp" />


    <EditText
        android:id="@+id/passEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/confirmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passEditText"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonAddActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmEditText"
        android:text="Save" />

    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderEdit">

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male" />


    </RadioGroup>


</RelativeLayout>
